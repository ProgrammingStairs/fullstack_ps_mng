<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('./header.ejs')%>
    <h2>Employee List</h2>
    <span style="color:red"><%=message%></span>
    <%if(employeeData.length==0){%>
        <h3> No Record Found </h3>
    <%}else{%>
    <table border="1" cellspacing="0" cellpadding="10">
        <tr>
            <th>S.No</th>
            <th>Username</th>
            <th>Email</th>
            <th>Profile1</th>
            <th>Profile2</th>
            <th>Summary</th>
        </tr>
        <%employeeData.forEach((obj,index)=>{%>
            <tr>
                <td><%=index+1%></td>
                <td><%=obj.username%></td>
                <td><%=obj.email%></td>
                <td>
                    <%obj.profileOne.forEach((name)=>{%>
                        <a download href="/images/<%=name%>">
                            <img src="/images/<%=name%>" height="100" width="100" alt="">
                        </a>                        
                    <%})%>
                </td>
                <td>
                    <%obj.profileTwo.forEach((name)=>{%>
                        <a download href="/images/<%=name%>">
                            <img src="/images/<%=name%>" height="100" width="100" alt="">
                        </a>                        
                    <%})%>
                </td>
                <td><%=obj.summary%></td>
            </tr>
        <%})%>
    </table>
    <%}%>
</body>
</html>