    <%- include('./userHeader.ejs') %>
    <h1>Update Profile</h1>
    <form action="/user/updateProfile" method="post">
        <input required value="<%=userData.username%>" type="text" placeholder="Enter username" name="username" id="username"> <br>

        <input required readonly value="<%=userData.email%>" type="email" placeholder="Enter email" name="email" id="email"> <br>
        
        <input required type="text" value="<%=userData.password%>" placeholder="Enter password" name="password" id="password"> <br>
        
        <input required type="text" value="<%=userData.address%>" placeholder="Enter address" name="address" id="address"> <br>

        <input type="submit" value="Update Profile"> <br>
        <input type="reset" value="Reset"> <br>
        <br>
    </form>
</body>
