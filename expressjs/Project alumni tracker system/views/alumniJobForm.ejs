            <!-- About Start -->
            <form action="/alumni/alumniJobPosting" method="post" class="form-group">
            
            <div class="about wow fadeInUp" data-wow-delay="0.1s">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="section-header text-left">
                            <h3>Alumni Add Job Posting 
                                <small>
                                    <span style="color:red">
                                        <%=message%>
                                    </span>
                                </small>
                        </h3>
                        </div>
            
                        <div class="col-lg-6 col-md-6" style="margin-top: -40px;">
                            <input type="text" class="form-control" placeholder="Enter Company Name" name="companyName" id="companyName">

                            <input type="text" class="form-control" placeholder="Enter Post Name" name="post" id="post">
                            
                            <input type="text" class="form-control" placeholder="Enter Department" name="department" id="department">
                           
                            No. Of Vacancy
                            <input type="number" class="form-control" placeholder="Enter No. of Vacancy" nim="0" name="vacancy" id="vacancy">

                            Salary
                            <input type="number" class="form-control" placeholder="Enter Salary" min="0" name="salary" id="salary">

                            Location
                            <input type="text" class="form-control" placeholder="Enter Location" name="location" id="location">

                            Select Bond
                            <select name="bond" id="bond" class="form-control">
                                <option value="">Select Bond(If Any)</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>

                        </div>
                        <div class="col-lg-6 col-md-6" style="margin-top: -80px;">

                            <select name="timings" id="timings" class="form-control">
                                <option value="">Select Timings</option>
                                <option value="8:00 AM TO 5:00 PM">8:00 AM TO 5:00 PM</option>
                                <option value="9:00 AM TO 6:00 PM">9:00 AM TO 6:00 PM</option>
                                <option value="10:00 AM TO 7:00 PM">10:00 AM TO 7:00 PM</option>
                                <option value="11:00 AM TO 8:00 PM">11:00 AM TO 8:00 PM</option>
                                <option value="2:30 PM TO 11:30 PM">2:30 AM TO 11:30 PM</option>
                                <option value="Flexible 9 Hours">Flexible 9 Hours</option>
                                <option value="Hours According to Part Time">Hours According to Part Time</option>   
                            </select>

                                    Apply From Date
                                    <input type="date" class="form-control" name="applyDate" id="applyDate">

                                    Apply Till Date
                                    <input type="date" class="form-control" name="applyTillDate" id="applyTillDate">

                                    <select name="mode" id="mode" class="form-control">
                                        <option value="">Select Mode</option>
                                        <option value="Fresher">Fresher</option>
                                        <option value="6+ Months">6+ Months</option>
                                        <option value="1+ Year">1+ Year</option>
                                        <option value="2+ Years">2+ Year</option>
                                        <option value="3+ Years">3+ Year</option>
                                        <option value="5+ Years">5+ Year</option>
                                        <option value="10+ Years">10+ Year</option>
                                    </select>

                                    Select Type
